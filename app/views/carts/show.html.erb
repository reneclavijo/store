<div class="row">
    <div class="col">
        <div class="card mb-3">
            <div class="card-body">
                <h4><b>Shopping Cart (<%= @cart.products.count %>)</b></h4>
            </div>
        </div>
        <% @cart.cart_products.each do |cp| %>
            <div class="card mb-3">
                <div class="card-body">
                    <h4> <%= cp.product.name %> </h4>
                    <h6 class="text-muted"> <%= cp.product.category.name %> </h6>
                    <p> <%= cp.product.description %> </p>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col">
        <!-- InformaciÃ³n del precio total del carrito -->
        <div class="card">
            <div class="card-body">
                <h4>
                    <b>Cart Summary</b>
                </h4>
                <div class="row">
                    <div class="col">
                        <b>Total: </b>
                    </div>
                    <div class="col">
                        <h5><%= @cart.total %> CLP</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
