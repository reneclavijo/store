<!-- VARIABLES: base_product -->
<div class="card w-100">
    <% if base_product.main_photo.attached? %>
      <%= image_tag base_product.main_photo, class: 'card-img-top' %>
    <% end %>
    <div class="card-body">
        <h5>
            <%= base_product.name %>
        </h5>
        <h6 class="text-muted">
            <%= base_product.category.name %>
        </h6>
        <p>
            <%= base_product.description %>
        </p>

        <%= link_to add_product_to_cart_path(base_product), method: :post, class: 'btn btn-secondary', data: { confirm: 'Add to the cart?' } do %>
            <i class="bi bi-cart-plus"></i>
            <%= number_to_currency(base_product.price, unit: 'CLP ', precision: 0, delimiter: '.') %>
        <% end %>
    </div>
</div>
